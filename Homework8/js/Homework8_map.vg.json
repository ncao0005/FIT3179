{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 600,
  "title": "Melbourne International Airlines Activity in 2020 March",
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ncao0005/FIT3179/main/Homework8/js/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ncao0005/FIT3179/main/Homework8/data/Homework9%201.23.24%20AM.csv"
      },
        "transform":[
          {"filter":
            {"field": "Australia", "equal": "Melbourne"}}
      ],
        "projection": {"type": "equalEarth"},
        "mark": "circle",
        "encoding": {
          "longitude": {
            "field": "LongitudeInAustralia",
            "type": "quantitative"
        },
          "latitude": {
            "field": "LatitudeInAustralia",
            "type": "quantitative"
        },
        "size": {"value": 100},
        "color": {"value": "orange"},
        "tooltip":[{"field":"Australia","type": "nominal", "title":"City name" }]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ncao0005/FIT3179/main/Homework8/data/FIT%20Ass%20data2.csv"
      },
      "projection": {"type": "equalEarth"},
      "mark": "circle",
      "encoding": {
        "longitude": {
          "field": "LongitudeInternation",
          "type": "quantitative"
        },
        "latitude": {
          "field": "LatitudeInternational",
          "type": "quantitative"
        },
        "size": {"value": 40},
        "color": {"value": "#377eb8"},
        "tooltip":[
          {"field":"International","type": "nominal", "title":"City name" },
          {"field":"TotalFlight", "type": "quantitative", "title":"Total number of Flights"}
        ]
      }
    },
    {
        "data": {
          "url": "https://raw.githubusercontent.com/ncao0005/FIT3179/main/Homework8/data/FIT%20Ass%20data2.csv"
        },
        "projection": {"type": "equalEarth"},
        "mark": "rule",
        "encoding": {
          "longitude": {
            "field": "LongitudeInAustralia",
            "type": "quantitative"
          },
          "latitude": {
            "field": "LatitudeInAustralia",
            "type": "quantitative"
          },
          "longitude2": {"field": "LongitudeInternation"},
          "latitude2": {"field": "LatitudeInternational"},
          "color":  {"value": "#5B9334"},
          "size": {
            "field": "TotalFlight",
            "scale": {
              "type": "threshold",
              "domain": [50, 100, 200, 300, 400],
              "range": [1,2,3,4,5]
            }
          }
        }
      }
  ]
}